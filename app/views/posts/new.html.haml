.span-24
  <h1>New Post</h1>
.span-12
  - form_for(@post) do |f|
    = f.error_messages
    %p
      = f.label :title
      %br/
      = f.text_field :title, :size => 56
      = live_field_preview :post_title, :title
    %p
      = f.label :body
      %br/
      ~ f.text_area :body
    %p
      = f.hidden_field :parent_id
      = f.submit "Create"
  = link_to 'Back', posts_path

.span-12.last
  = render :partial => "/shared/wmd_preview"
